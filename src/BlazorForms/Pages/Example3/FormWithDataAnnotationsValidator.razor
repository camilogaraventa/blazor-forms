@page "/examples/3"

<EditForm Model=_model OnValidSubmit="OnValidFormSubmit" OnInvalidSubmit="OnInvalidFormSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group">
        <label for="name">Name:</label>
        <InputText class="form-control" id="name" @bind-Value=_model.Name />
        <ValidationMessage For="() => _model.Name" />
    </div>
    <div class="form-group">
        <label for="age">Age:</label>
        <InputNumber class="form-control" id="age" @bind-Value=_model.Age />
        <ValidationMessage For="() => _model.Age" />
    </div>
    <div class="form-group">
        <label for="adress">Adress:</label>
        <InputText class="form-control" id="adress" @bind-Value=_model.Nested.Adress />
        <ValidationMessage For="() => _model.Nested.Adress" />
    </div>
    <input type="submit" value="Submit" class="btn btn-primary" />
</EditForm>

<DisplayMessages Messages="_messages" />